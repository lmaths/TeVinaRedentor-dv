<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_degrade"
    android:orientation="vertical"
    tools:context="com.rightside.tevinaredentor.activity.LoginActivity"
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textrecuperarconta"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Criar uma nova conta"
        android:textColor="@color/caganeira"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textChangePassword"
        android:layout_width="290dp"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Preencha os campos abaixo para realizar um novo cadastro no Te Vi na Redentor. Não precisa se preocupar, nenhum dado será exposto e toda postagem aqui é feita de forma anônima."
        android:textColor="@android:color/black"
        android:textSize="15sp" />




    <EditText
        android:id="@+id/editCadastroNome"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/background_caixa_texto"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Nome de Usuário"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        />
    <EditText
        android:id="@+id/editCadastroSenha"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_caixa_texto"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        />

    <EditText
        android:id="@+id/editCadastroEmail"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_caixa_texto"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
         />

    <ProgressBar
        android:id="@+id/progressCadastro"
        style="?android:attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginLeft="160dp"
        />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="250dp"
        android:layout_height="50dp"
      android:layout_gravity="center"
        android:background="@drawable/background_botao"
        android:layout_marginTop="10dp"
        android:text="Cadastrar"
        android:textColor="@android:color/white"
        />

</LinearLayout>