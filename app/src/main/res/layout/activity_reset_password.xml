<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_degrade"
    tools:context=".activity.ResetPasswordActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textrecuperarconta"
        android:layout_width="224dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Recupere sua conta"
        android:textColor="@color/caganeira"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textChangePassword"
        android:layout_width="311dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Insira o nome de usuário do Te Vi na Redentor ou o email vinculado à sua conta."
        android:textColor="@android:color/black"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/etPasswordEmail"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_caixa_texto"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"

        />

    <Button
        android:id="@+id/buttonPasswordReset"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:background="@drawable/background_botao"
        android:text="Recuperar Senha"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />


</LinearLayout>